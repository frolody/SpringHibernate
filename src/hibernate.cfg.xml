<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/spring_hibernate</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">12345</property>
    <property name="hibernate.hbm2ddl.auto">none</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <mapping class="com.spring.hibernate.entity.Person"/>
    <mapping class="com.spring.hibernate.entity.Role"/>
    <mapping class="com.spring.hibernate.entity.Menu"/>
    <mapping class="com.spring.hibernate.entity.Sales"/>
    <mapping class="com.spring.hibernate.entity.Product"/>
    <mapping class="com.spring.hibernate.entity.SalesDetail"/>
    <mapping class="com.spring.hibernate.entity.Address"/>
    <mapping class="com.spring.hibernate.entity.Supplier"/>
    <mapping class="com.spring.hibernate.entity.Purchase"/>
    <mapping class="com.spring.hibernate.entity.PurchaseDetail"/>
    <!-- <mapping resource="barang.hbm.xml"/> -->
  </session-factory>
</hibernate-configuration>
